<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.inamul.projectclg.Grouping.Creategp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="214dp"
        android:layout_height="67dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="93dp"
        android:layout_marginLeft="93dp"
        android:layout_marginTop="42dp"
        android:text="Create Group"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/code"
        android:layout_width="228dp"
        android:layout_height="58dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="192dp"
        android:ems="10"
        android:hint="Enter a unique code"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/creategp"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="174dp"
        android:text="Create" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="184dp"
        android:layout_height="149dp"
        android:layout_alignStart="@+id/code"
        android:layout_alignEnd="@+id/code"
        android:layout_alignBottom="@+id/code"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="91dp"
        android:src="@drawable/group" />

</RelativeLayout>
