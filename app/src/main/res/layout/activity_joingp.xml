<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.inamul.projectclg.Grouping.Joingp">

    <EditText
        android:id="@+id/jcode"
        android:layout_width="271dp"
        android:layout_height="67dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="289dp"
        android:ems="10"
        android:hint="Unique Code"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/join"
        android:layout_width="139dp"
        android:layout_height="61dp"
        android:layout_below="@+id/jcode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="229dp"
        android:text="Join" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="157dp"
        android:layout_height="139dp"
        android:layout_alignStart="@+id/jcode"
        android:layout_alignEnd="@+id/jcode"
        android:layout_alignBottom="@+id/jcode"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="145dp"
        android:src="@drawable/join" />
</RelativeLayout>
